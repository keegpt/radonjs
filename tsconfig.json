{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ]
    },
    "include": [
        "src", "@types"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}